<%= render 'layouts/header' %>
<div class="row">
	<div class="col-md-6 col-sm-6 col-xs-6 col-lg-6 view-all-header">
		<%= link_to 'Back', homes_path, class: 'add-new-text btn btn-primary' %>
	</div>
	<div class="col-md-6 col-sm-6 col-xs-6 col-lg-6 view-all-header">
		<%= link_to 'View All', homes_path, class: 'view-all-text btn btn-primary' %>
 	</div>
</div><br>
<div class="container">
  <h1 style="text-align:center">Add new Banner Images to the Homepage</h1>
    <%= form_for(@home, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class = "row">
  			<div class = "col-md-6" style="margin-left:25%">
  	       <div class="form-group">
            <%= f.label :banner1 %>
            <%= f.file_field :banner2, class: 'form-control' %>
          </div>
  		    <div class="form-group">
    				<%= f.label :banner2 %>
    				<%= f.file_field :banner2, class: 'form-control' %>
  				</div>
			</div>
		</div>
		<div style="margin-left: 25%"><%= f.submit "Add+", class: 'btn btn-primary' %></div>
	<% end %>
</div>
