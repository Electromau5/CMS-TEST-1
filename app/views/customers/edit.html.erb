<%= render 'layouts/header' %>
<div class="row">
	<div class="col-md-6 col-sm-6 col-xs-6 col-lg-6 view-all-header">
		<%= link_to 'Back', customers_path, class: 'add-new-text btn btn-primary' %>
	</div>
	<div class="col-md-6 col-sm-6 col-xs-6 col-lg-6 view-all-header">
		<%= link_to 'View All', customers_path, class: 'view-all-text btn btn-primary' %>
 	</div>
</div><br>
<div class="container">
  <h1 style="text-align:center">Edit Customer Info=</h1>
    <%= form_for(@customer, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class = "row">
  			<div class = "col-md-6" style="margin-left:25%">
  				<div class="form-group">
    				<%= f.text_field :name, class: 'form-control' %>
  				</div>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            
            <%= f.text_field :phone, class: 'form-control' %>
          </div>
          <div class="form-group">
     
            <%= f.text_field :eventdate, class: 'form-control' %>
          </div>
          <div class="form-cgroup">
          
            <%= f.text_field :message, class: 'form-control' %>
          </div>
        
    	</div>
		</div>
		<div style="margin-left: 25%"><%= f.submit "Edit", class: 'btn btn-primary' %></div>
	<% end %>
</div>
