<%= render 'layouts/header' %>
	<div class="row">
		<div class="col-md-6 col-sm-6 col-xs-6 col-lg-6 view-all-header">
			<%= link_to 'Add+', new_kitchen_path, class: 'add-new-text btn btn-primary' %>
		</div>
		<div class="col-md-6 col-sm-6 col-xs-6 col-lg-6 view-all-header">
			<%= link_to 'View All', kitchens_path, class: 'view-all-text btn btn-primary' %>
 		</div>
	</div><br>
	<h2 style="text-align:center">HOW YOUR FOOD IS PREPARED</h2>
	<div class="container">	
		<div class="row">
		<% Kitchen.all.each do |kitchen| %>
			<div class="col-md-4 col-lg-4 col-sm-12 col-xs-12" ><br>
				<div class="kitchen-cms-title"><%= kitchen.description %></div><br>
				<div class="kitchen-cms-image"><%= image_tag(kitchen.image(:medium)) %></div><br>
				<%= link_to 'EDIT', edit_kitchen_path(kitchen), class: 'kitchen-cms-edit' %>
				<%= link_to 'DELETE', kitchen, method: :delete,  data: { confirm: 'Are you sure?' }, class: 'kitchen-cms-edit' %>
			</div>
		<% end %>
		</div>
	</div>

