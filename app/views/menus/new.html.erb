<%= render 'layouts/header' %>
<div class="row">
	<div class="col-md-6 col-sm-6 col-xs-6 col-lg-6 view-all-header">
		<%= link_to 'Back', menucms_path, class: 'add-new-text btn btn-primary' %>
	</div>
	<div class="col-md-6 col-sm-6 col-xs-6 col-lg-6 view-all-header">
		<%= link_to 'View All', menucms_path, class: 'view-all-text btn btn-primary' %>
 	</div>
</div><br>
<div class="container">
  <h1 style="text-align:center">Add a New Menu Item</h1>
    <%= form_for(@menu, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class = "row">
  			<div class = "col-md-6" style="margin-left:25%">
  				<div class="form-group">
    				<%= f.label :name, 'Name' %>
    				<%= f.text_field :name, class: 'form-control' %>
  				</div>
  			    <div class="form-group">
    				<%= f.label :description, 'Description' %>
    				<%= f.text_area :description, class: 'form-control' %>
  				</div>
             <div class="form-group">
            <%= f.label :section, 'Type' %><br>
            <%= f.select :section, [ 'Entree', 'Side Item', 'Appetizer', 'Dessert'], :prompt => 'Select type' %>
          </div>
  			    <div class="form-group">
    				<%= f.label :image %>
    				<%= f.file_field :image, class: 'form-control' %>
  				</div>
			</div>
		</div>
		<div style="margin-left: 25%"><%= f.submit "Add+", class: 'btn btn-primary' %></div>
	<% end %>
</div>
