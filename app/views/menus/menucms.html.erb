				  <div class="menu-cms-image"><%= image_tag(menu.image(:medium)) %></div><br>
				  <div class="menu-cms-title"><%= menu.name %></div><br>
				  <div class="menu-cms-description"><%= menu.description %></div><br>
				  <div class="menu-cms-edit-delete">
				  <%= link_to 'EDIT', edit_menu_path(menu), class: 'menu-cms-edit' %>
				  <%= link_to 'DELETE', menu, method: :delete,  data: { confirm: 'Are you sure?' }, class: 'menu-cms-edit' %>
				</div>
			</div>
		  <% end %>
		  </div>
