<%= render 'layouts/header' %>
	<div class="row">
		<div class="col-md-6 col-sm-6 col-xs-6 col-lg-6 view-all-header">
			<%= link_to 'Add+', new_menu_path, class: 'add-new-text btn btn-primary' %>
		</div>
		<div class="col-md-6 col-sm-6 col-xs-6 col-lg-6 view-all-header">
			<%= link_to 'View All', menucms_path, class: 'view-all-text btn btn-primary' %>
 		</div>
	</div><br>
	<h2 style="text-align:center; color: #fff">CATERING MENU</h2>
	 <div class="container">	
	   <div class="row">
      <h2 style="text-align:center">Entrees</h2>
		  <% Menu.all.where(:section => 'Entree').each do |menu| %>
